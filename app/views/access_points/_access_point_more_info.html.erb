<h2><%=t :More_info %></h2>
<br />

<div class="box with_border">
  <h4><%=t :Description %></h4>
  <br/>

  <p><%= @access_point.description.empty? ? t(:No_description_available) : @access_point.description %></p>
</div>

<div class="box with_border">
  <h4><%=t :Site_description %></h4>
  <p>
    <%=t :Will_be_rendered_in_georss %><br/>
    <span id="clickable_site_description"><strong>(<%=t :Click_to_edit %>)</strong></span>
  </p>

  <p id="site_description"><%= @access_point.site_description.blank? ? t(:No_site_description_available) : @access_point.site_description %></p>
</div>

<div class="box with_border">
  <h4><%=t :Notes %></h4>
  <p><span id="clickable_notes"><strong>(<%=t :Click_to_edit %>)</strong></span></p>

  <p id="notes"><%= @access_point.notes.blank? ? t(:No_notes_available) : simple_format(@access_point.notes) %></p>
</div>