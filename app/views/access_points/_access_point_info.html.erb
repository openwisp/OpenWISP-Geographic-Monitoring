<h2><%=t :Info %></h2>
<br />
<table>
  <tbody class="hover">
  <tr>
    <td><strong><%=t :Hostname %></strong></td>
    <td class="right"><%= @access_point.hostname %></td>
  </tr>
  <tr>
    <td><strong><%=t :Address %></strong></td>
    <td class="right"><%= @access_point.address %></td>
  </tr>
  <tr>
    <td><strong><%=t :City %></strong></td>
    <td class="right"><%= @access_point.city %></td>
  </tr>
  <tr>
    <td><strong><%=t :Status %></strong></td>
    <td class="right">
      <% if @access_point.up? %>
          <%=t :up %>
      <% elsif @access_point.down? %>
          <%=t :down %>
      <% elsif @access_point.unknown? %>
          <%=t :unknown %>
      <% end %>
      <%= image_tag_for @access_point, :id => 'hs_icon', :class => 'hidden' %>
    </td>
  </tr>
  <tr>
    <td><strong><%=t :Favourite %></strong></td>
    <td id="favourite" class="right">
      <a class="favourite-update" data-href="<%= wisp_access_point_property_set_favourite_path(@access_point.wisp, :access_point_id => @access_point.id) %>">
        <%= @access_point.favourite ? image_tag('favourite.png', :size => "25x25") : image_tag('not_favourite.png', :size => "25x25") %>
      </a>  
    </td>
    
  </tr>
  <tr>
    <td><strong><%=t :Ip_addr %></strong></td>
    <td class="right"><%= @access_point.ip %></td>
  </tr>
  <tr>
    <td><strong><%=t :Coordinates %></strong></td>
    <td class="right"><%= @access_point.lat %>, <%= @access_point.lng %></td>
  </tr>
  <tr>
    <td><strong><%=t :Activation_date %></strong></td>
    <td class="right"><%=l @access_point.activation_date rescue '-' %></td>
  </tr>
  <tr>
    <td><strong><%=t :Earliest_seen %></strong></td>
    <td class="right"><%= l(@access_point.earliest_seen, :format => :short) rescue '-' %></td>
  </tr>
  <tr>
    <td><strong><%=t :Latest_seen %></strong></td>
    <td class="right"><%= l(@access_point.latest_seen, :format => :short) rescue '-' %></td>
  </tr>
  <tr>
    <td id="clickable_public"><strong><%=t :Public_on_Georss %></strong> (<%=t :click_to_edit %>)</td>
    <td id="public" class="right"><%=t @access_point.public ? :true : :false %></td>
  </tr>
  <tr>
    <td id="clickable_category"><strong><%=t :Category %></strong> (<%=t :click_to_edit %>)</td>
    <td id="category" class="right">
      <span id="category_select"><%= @access_point.category.present? ? @access_point.category : t(:None) %></span>
      <span id="category_text"></span>
    </td>
  </tr>
  </tbody>
</table>
<script>owgm.initFavourite()</script>
