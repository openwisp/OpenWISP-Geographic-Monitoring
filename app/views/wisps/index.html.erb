<div class="grid_12">
  <div class="box">
    <h1><%=t :Wisp_list %></h1>

    <table id="wisp-list">
      <thead>
      <tr>
        <th class="name"><%=t :Name %></th>
        <th class="notes"><%=t :Notes %></th>
        <th class="up green center"><%=t :Up %></th>
        <th class="down red center"><%=t :Down %></th>
        <th class="unknown center"><%=t :Unknown %></th>
        <th class="groups center">&nbsp;</th>
        <th class="report">&nbsp;</th>
      </tr>
      </thead>

      <tbody>
      <% @wisps.each do |wisp| %>
          <% if auth?(:wisps_viewer) || auth?(:wisp_access_points_viewer, wisp) %>
              <tr class="<%= cycle 'odd', 'even' %>">
                <td class="name"><%= link_to wisp.name, wisp_access_points_path(wisp) %></td>
                <td class="notes"><%= wisp.notes %></td>
                <td class="up center"><%= wisp.access_points_up.count %></td>
                <td class="down center"><%= wisp.access_points_down.count %></td>
                <td class="unknown center"><%= wisp.access_points_unknown.count %></td>
                <td class="groups center"><%= link_to t(:Groups), wisp_groups_path(wisp) %></td>
                <td class="report center"><%= link_to t(:Availability_report), wisp_availability_report_path(wisp) %></td>
              </tr>
          <% end %>
      <% end %>
      </tbody>
    </table>

    <!--<% if auth? :wisps_viewer %>
      <h6>
        <% if @wisps.count > 1 %>
